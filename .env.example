# ================================================================
# ATO TAX OPTIMIZATION APP - ENVIRONMENT VARIABLES
# ================================================================
# Copy this file to .env.local and fill in your values

# ----------------------------------------------------------------
# XERO API CREDENTIALS
# ----------------------------------------------------------------
# Get these from https://developer.xero.com/app/manage
# Create a new app, set the redirect URI to:
# Development: http://localhost:3000/api/auth/xero/callback
# Production: https://yourdomain.com/api/auth/xero/callback

XERO_CLIENT_ID=your_xero_client_id
XERO_CLIENT_SECRET=your_xero_client_secret

# ----------------------------------------------------------------
# SUPABASE CREDENTIALS
# ----------------------------------------------------------------
# Get these from https://supabase.com/dashboard/project/_/settings/api

NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# ----------------------------------------------------------------
# APPLICATION SETTINGS
# ----------------------------------------------------------------

# Base URL for redirects (no trailing slash)
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Session encryption secret (generate with: openssl rand -base64 32)
SESSION_SECRET=generate_a_random_32_character_string

# ----------------------------------------------------------------
# GOOGLE AI (Gemini - for agent analysis)
# ----------------------------------------------------------------
# Get API key from https://aistudio.google.com/apikey

GOOGLE_AI_API_KEY=your_google_ai_api_key

# ----------------------------------------------------------------
# GOOGLE WORKSPACE (for accountant reports via /send-to-accountant)
# ----------------------------------------------------------------
# Get credentials from https://console.cloud.google.com
# Required APIs: Gmail, Docs, Sheets, Drive

GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:3000/api/auth/google/callback

# ----------------------------------------------------------------
# MYOB API CREDENTIALS
# ----------------------------------------------------------------
# Get these from https://my.myob.com.au/pages/myapps.aspx
# Create a new app, set the redirect URI to:
# Development: http://localhost:3000/api/auth/myob/callback
# Production: https://yourdomain.com/api/auth/myob/callback

MYOB_CLIENT_ID=your_myob_client_id
MYOB_CLIENT_SECRET=your_myob_client_secret

# ----------------------------------------------------------------
# QUICKBOOKS ONLINE API CREDENTIALS
# ----------------------------------------------------------------
# Get these from https://developer.intuit.com/app/developer/myapps
# Create a new app, set the redirect URI to:
# Development: http://localhost:3000/api/auth/quickbooks/callback
# Production: https://yourdomain.com/api/auth/quickbooks/callback

QUICKBOOKS_CLIENT_ID=your_quickbooks_client_id
QUICKBOOKS_CLIENT_SECRET=your_quickbooks_client_secret

# ----------------------------------------------------------------
# SENDGRID (Email Delivery for Reports & Invitations)
# ----------------------------------------------------------------
# Get API key from https://app.sendgrid.com/settings/api_keys
# Used for sending PDF/Excel reports via email and organization invitations
# Sender must be verified in your SendGrid account

SENDGRID_API_KEY=SG.your_sendgrid_api_key

# ----------------------------------------------------------------
# GOOGLE AI MODEL (Optional)
# ----------------------------------------------------------------
# Override the default Gemini model used for AI analysis
# Default: gemini-2.0-flash

# GOOGLE_AI_MODEL=gemini-2.0-flash

# ----------------------------------------------------------------
# OPENROUTER API (Optional - alternative AI provider)
# ----------------------------------------------------------------
# Get API key from https://openrouter.ai/keys

# OPENROUTER_API_KEY=your_openrouter_api_key

# ----------------------------------------------------------------
# BRAVE SEARCH API (Optional - for tax rate verification)
# ----------------------------------------------------------------
# Get API key from https://brave.com/search/api/

# BRAVE_API_KEY=your_brave_api_key

# ----------------------------------------------------------------
# JINA AI (Optional - for web scraping tax rates)
# ----------------------------------------------------------------
# Get API key from https://jina.ai/

# JINA_API_KEY=your_jina_api_key

# ----------------------------------------------------------------
# LINEAR (Optional - project management integration)
# ----------------------------------------------------------------
# Get API key from https://linear.app/settings/api

# LINEAR_API_KEY=lin_api_your_key
# LINEAR_TEAM_ID=UNI
# LINEAR_PROJECT_ID=your_project_id

# ----------------------------------------------------------------
# BUSINESS DETAILS (Optional - used in reports)
# ----------------------------------------------------------------

# BUSINESS_NAME=Your Business Name
# BUSINESS_ABN=12345678901
# YOUR_NAME=Your Name

# ----------------------------------------------------------------
# SINGLE USER MODE (Optional)
# ----------------------------------------------------------------
# Set to true to bypass auth for local/single-user deployments

# SINGLE_USER_MODE=false
